
<div class="container">

<h1>Eat the Burger!</h1>
<img src="../public/assets/img/burger.png"> </img>

<div class="row">
<div class="col-6">
<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-6">
  <ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Cat</button>
</form>

</div>
