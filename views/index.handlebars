<div class="container">

  <h1 class="text-center">Eat the Burger!</h1>
  <div class="text-center">
    <img src="./assets/img/burger.png" style="width:30%">
  </div>

  <div class="container">

    <div class="row">

      <div class="col-6">
        <h2>
          Un-Devoured Burgers
        </h2>
        <ul>
          {{#each burger}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>

      <div class="col-6">
        <h2>
          Devoured Burgers
        </h2>
        <ul>
          {{#each burger}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>

    </div>

  </div>

<form class="create-form">
  <div class="form-group">
    <label for="ca">Add Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit" id="create-burger">Add Burger</button>
</form>

</div>