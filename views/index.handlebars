<div class="container">

  <h1 class="text-center">Eat the Burger!</h1>
  <div class="text-center">
    <img src="./assets/img/burger.png" style="width:30%">
  </div>

  <div class="container">

    <div class="row">

      <div class="col-12">
        <h2>
          Un-Devoured Burgers
        </h2>
        <ul>
          {{#each burger}}
            {{#unless devoured}}
              {{> burgers/burger-block}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-12">
        <h2>
          Devoured Burgers
        </h2>
        <ul>
          {{#each burger}}
            {{#if devoured}}
              {{> burgers/burger-block}}
            {{/if}}
          {{/each}}
        </ul>
      </div>

    </div>

  </div>

  <form class="create-form">
    <div class="form-group">
       <h2>
          Add Burger:
        </h2>
      <input type="text" id="create-burger" name="burger_name">
    </div>
    <button type="submit" id="submit">Add Burger</button>
  </form>

</div>